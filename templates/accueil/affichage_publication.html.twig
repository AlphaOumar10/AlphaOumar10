{% extends "base.html.twig" %}

{% block title %}Publications{% endblock %}
{% block body %}
{% for pub in publications %}
    <div class="p-5">
        <p> <img src="{{ asset('uploads/' ~ pub.photo) }}" width="100" height="100"/></p>
        </p>{{ pub.contenu }}</p>
        <p>{{ pub.titre }}</p>
        <p>{{ pub.user.nom }}</p>
        <div class="row">
            <a href="{{ path('publication_commentaire', {'id': pub.id }) }}" >Commenter</a>
        </div>
    </div>
{% endfor %}
{% endblock %}

