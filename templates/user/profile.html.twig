    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                        <i class="icon-reorder shaded"></i></a><a class="brand" href="index.html">Eds network </a>
                    <div class="nav-collapse collapse navbar-inverse-collapse">
                        <form class="navbar-search pull-left input-append" action="#">
                        <input type="text" class="span3">
                        <button class="btn" type="button">
                            <i class="icon-search"></i>
                        </button>
                        </form>

                        <ul class="nav pull-right">
                            <li class="active"><a href="#"><i class="icon-envelope"></i></a></li>

                            <li><a href="#">Acceuil </a></li>
                            <li><a href="#">Contact </a></li>
                            <li class="nav-user dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="{{ asset('uploads/' ~ user.photo) }}" class="nav-avatar" />
                                <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a><strong>{{ user.prenom ~" "~ user.nom }} </strong></a></li>
                                    <li><a href="{{ path('admin_one', {'id': user.id }) }}">Modifier profil</a></li>
                                    <li><a href="#">Parametres</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Se deconnecter</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!-- /.nav-collapse -->
                </div>
            </div>
            <!-- /navbar-inner -->
        </div>
        <!-- /navbar -->
        <div class="wrapper">
            <div class="container">
                <div class="row">
                    <div class="span3">
                        <div class="sidebar">
                              <ul class="widget widget-menu unstyled">
                                <li class="active"><a href="{{ path('index', {'id': user.id }) }}">Menu
                                </a></li>
                                <ul class="widget widget-menu unstyled">
                                    <li><a class="collapsed" data-toggle="collapse" href="#togglePages">
                                        Communautés </a>
                                            <ul id="togglePages" class="collapse unstyled">
                                                {% for g in user.groupes %}
                                                    <li><a href="">Communate publique </a></li>
                                                    <li><a href="{{ path('groupe_one', {'id': user.id,'id1': g.id }) }}"></i>{{g.titre}}</a></li>
                                                {% endfor %}
                                            </ul>
                                    </li>
                                </ul>
                                </li>
                                <li><a href="{{ path('publication_liste', {'id': user.id }) }}">Publications 
                                     </a></li>
                                <li><a href="{{ path('message', {'id': user.id }) }}">Messagerie 
                                    </a></li>
                               <li><a href="{{ path('admin_etudiants', {'id': user.id }) }}">Etudiants 
                                     </a></li>
                            </ul>
                           
                            <!--/.widget-nav-->
                            
                            
                            
                            <!--/.widget-nav-->
                            
                        </div>
                        <!--/.sidebar-->
                    </div>
                    <!--/.span3-->

                  <div class="span9">
                    <div class="content">
                        <div class="module">
                            <div class="module-body">
                                <div class="profile-head media">
                                    <a href="#" class="media-avatar pull-left">
                                        <img src="{{ asset('uploads/' ~ user.photo) }}">
                                    </a>
                                    <div class="media-body">
                                        <h4>
                                            {{ user.prenom ~" "~ user.nom }} <h2> <small>{{ user.pays}}</small></h2>
                                        </h4>
                                        <p class="profile-brief">
                                            Administrateur
                                        </p>
                                        <p class="profile-brief">
                                            {{ user.email }}
                                        </p>
                                        <p class="profile-brief">
                                            {{ user.birthdayAt|date('d/m/Y') }}
                                        </p>
                                        <p class="profile-brief">
                                            {{ user.pays }}
                                        </p>
                                    </div>
                                    <a href="{{ path('groupe_ajout', {'id': user.id }) }}">Créer une communauté 
                                    </a>
                                </div>
                               
										
										
                            </div>
                            <!--/.module-body-->
                        </div>
                        <!--/.module-->
                    </div>
                    <!--/.content-->
                </div>
                <!--/.span9-->
                </div>
            </div>
            <!--/.container-->
        </div>
        <!--/.wrapper-->
