<!doctype html>
<html>
<head>
	<meta charset="utf-8"/>
	<title>Administrateur</title>
	<style type="text/css">
     td{
     	height: 40px;
     }
	</style>
</head>
<body>
	<form action="{{ path('admin_ajout')}}" method="post" enctype="multipart/form-data">

		<fieldset>
			<legend>Ajout</legend>
			<table>
				<tr>
					<td><label>Nom</label></td>
					<td><input type="text" name="nom" placeholder="Nom"/> </td>
				</tr>
				<tr>
					<td><label>Prenom</label></td>
					<td><input type="text" name="prenom" placeholder="Prenom"/></td>
				</tr>
				<tr>
					<td><label>Email</label></td>
                    <td><input type="email" name="email" placeholder="Email"/></td>
				</tr>
                <tr>
					<td><label>Pays</label></td>
					<td><input type="text" name="pays" placeholder="Pays"/> </td>
				</tr>
				<tr>
					<td><label>Date de naissance</label></td>
					<td><input type="date" name="birthday" placeholder="Naissance"/></td>
				</tr>
                <tr>
					<td><label>Mot de passe</label></td>
					<td><input type="password" name="password" placeholder="Mot de passe"/></td>
				</tr>
				<tr>
					<td><label>Photo</label></td>
					<td><input type="file" name="photo" placeholder="Photo"/></td>
				</tr>
				<tr>
					<td colspan="2"><input type="submit" value="Ajouter"/>  <input type="reset" value="Annuler"/></td>
				</tr>
			</table>
		</fieldset>
    </form>

</body>
</html>
