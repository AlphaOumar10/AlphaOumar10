{% extends "base.html.twig" %}

{% block title %}Fiche utilisateur{% endblock %}
{% block body %}
    <div class="p-5">
        <div class="row">
            <div class="col">
                <h2>Fiche administrateur</h2>
            </div>
        </div>
        <p>Photo de profil : <img src="{{ asset('uploads/' ~ user.photo) }}" width="100" height="100"/></p>

        <p>Nom : {{ user.nom }}</p>
        <p>Prenom : {{ user.prenom }}</p>
        <p>Email : {{ user.email }}</p>
        <p>Pays : {{ user.pays }}</p>
        <p>NÃ©(e) le : {{ user.birthdayAt|date('d/m/Y') }}</p>
        
    </div>
    <form action="{{ path('admin_one',{'id': user.id })}}" method="post" enctype="multipart/form-data">

		<fieldset>
			<legend>Modification</legend>
			<table>
				<tr>
					<td><label>Nom</label></td>
					<td><input type="text" name="nom" value = {{ user.nom }} placeholder="Nom"/> </td>
				</tr>
				<tr>
					<td><label>Prenom</label></td>
					<td><input type="text" name="prenom" value = {{ user.prenom }} placeholder="Prenom"/></td>
				</tr>
				<tr>
					<td><label>Email</label></td>
                    <td><input type="email" name="email" value = {{ user.email }} placeholder="Email"/></td>
				</tr>
                <tr>
					<td><label>Pays</label></td>
					<td><input type="text" name="pays" value = {{ user.pays }} placeholder="Pays"/> </td>
				</tr>
				<tr>
					<td><label>Date de naissance</label></td>
					<td><input type="text" name="birthday" value = {{ user.birthdayAt|date('d/m/Y') }} placeholder="Naissance"/></td>
				</tr>
				<tr>
					<td><label>Photo</label></td>
					<td><input type="file" name="photo" value = {{ user.photo }} placeholder="Photo"/></td>
				</tr>
				<tr>
					<td colspan="2"><input type="submit" value="Modifier"/>  <input type="reset" value="Annuler"/></td>
				</tr>
			</table>
		</fieldset>
    </form>
{% endblock %}

