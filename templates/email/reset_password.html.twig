{% extends 'base.html.twig' %}
 
{% block title %}Réinisialisation du mot de passe{% endblock %}
 
{% block body %}
<div class="container bubble">
    <form action="{{ path('etudiant_password')}}" method="post">
 
        <h2 class="bubble-title">Réinisialisation du mot de passe</h2>
        <label for="inputPassword" class="form-control">Saisissez votre code </label>
        <input type="text" name="code" class="form-control" placeholder="Code" required>
        <label for="inputPassword" class="form-control">Nouveau mot de passe</label>
        <input type="password" name="password"  class="form-control" placeholder="Password" required>
<div class="text-center mt-2">
        <button class="btn btn-lg btn-success mt-2 ml-0" type="submit">
            Valider
        </button>
        </div>
    </form>
    </div>
 
{% endblock %}